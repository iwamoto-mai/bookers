<h1>Books</h1>
 <table>
  <thead>
   <tr>
    <th><h4>Title</h4></th>
    <th><h4>Body</h4></th>
   </tr>
  </thead>
  <% @books.each do |book| %>
  <tbody>
   <tr>
   <td rowspan="1"><span><%= book.title  %></span></td>
   <td rowspan="1"><span><%= book.body %></span></td>
   <td colspan><%= link_to "Show", book_path(book.id) %></td>
   <td colspan><%= link_to "Edit", edit_book_path(book.id) %></td>
   <td colspan><%= link_to "Destroy", book_path(book.id), method: :delete, "data-confirm" => "Are you sure?"  %></td>
   <% end %>
  </tr>
  </tbody>
 </table>



 <h2>New Book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

 <%= form_with model: @book do |f| %>
 <p>Title</P>
   <%= f.text_field :title %>

 <P>Body</P>
   <%= f.text_area :body %>

   <%= f.submit 'Create Book' %>
   <% end %>



